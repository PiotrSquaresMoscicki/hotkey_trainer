{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2020",
    "lib": ["dom", "es2020"],
    "target": "es2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "include": [
    "src", 
    "vite.config.ts"
  ],
  "exclude": ["node_modules"]
}